    <script>
    $(function() {
        getAdvice(function(data){
            if (!data){ //NOTE(DanoB) If data is false, keep advice hidden
                $("#advice").addClass("hidden");
                $("#noadvice").removeClass("hidden");
            }
            else {
                $("#advice").prepend(data);
                $("#advice").removeClass("hidden");
                $("#noadvice").addClass("hidden");
            }
        });
        $("#seen-advice").on("click", function(){
            $("#advice").addClass("hidden");
            $("#noadvice").removeClass("hidden");
        });
    });
    </script>
