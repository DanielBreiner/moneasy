<form method="GET" action="/sql">
    <label for="credit">Income</label>
    <input type="checkbox" name="credit">
    <select name="category"> <!-- TODO(DanoB) Fetch from database -->
    </select>
    <input type="number" placeholder="amount" name="amount" step="0.01">
    <input type="text" placeholder="note" name="note">
</form>
<button id="submit">Submit</button>

<button id="get">Show expenses</button>


<div style='width: 350px; height: 400px; display: block;'>
    <!-- v tomto div-e je pie chart, velkost pieChartu nastavovat cez tento div -->
    <canvas id='pieChart'>
    </canvas>
</div>

<table id="expenses">
    <thead></thead>
    <tbody>

    </tbody>
</table>

<script>
    function get() {
        $.ajax({
            "url": "/sql",
            "contentType": "application/json",
            "success": function (res) {
                let table = $("#expenses tbody").html("");
                res.forEach(function (item) {
                    table.append(`\
                    <tr>\
                        <td>${item["date"]}</td>\
                        <td>${item["spent"]}</td>\
                        <td>${item["category"]}</td>\
                        <td>${item["note"]}</td>\
                    </tr>\
                    `)
                });
            }
        });
    }

    function post() {
        data = {};
        $('form').serializeArray().forEach(function(item){
            if (item){
                data[item["name"]] = item["value"];
            }
        });
        console.log(JSON.stringify(data));
        
        
        $.ajax({
            "url": "/sql",
            "method": "POST",
            "content-type": "application/json",
            "data": JSON.stringify(data),
            "success": function (res) {                
                if (res){
                    console.log(res);
                }
            }
        });
    }

    function select() { //NOTE(DanoB) Changes the options in form select
        let el = $("form select");
        
        if ($("form input[type=checkbox]").is(':checked')) {
            el.html('\
            <option value="">--Choose a category--</option>\
            <option value="books">books</option>\
            <option value="sweets">sweets</option>\
            <option value="food">food</option>\
            <option value="fun">fun</option>\
            <option value="toys and games">toys and games</option>\
            <option value="gifts">gifts</option>\
            ');
            
        } else {
            el.html('\
            <option value="">--Choose a category--</option>\
            <option value="pocket money">pocket money</option>\
            <option value="gift">gift</option>\
            <option value="chores">chores</option>\
            ');
        }
    }

    $(function () {

        //NOTE(DanoB) PIECHART
        var ctx = document.getElementById('pieChart');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['zostato', 'minute'],
                datasets: [{
                    label: 'peniaze',
                    data: [1, 1],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
            }
        });

        //NOTE(DanoB) adding ajax onclick listener
        $("#get").on("click", function () {
            get();
        })

        $("#submit").on("click", function () {
            post();
        })

        $("form input[type=checkbox]").change( function() {
            select();
        });

        get();
        select();
    });
</script>
</body>