<body>
    <main id='main-goal'>
        <p class="logo-crs logo-dash">
            <a href="crossroad"><img src="img/moneasy_cloud.png" alt="moneasy" class="logo-img-crs"></a>
        </p>
        <section id='progress-section'>
            <!-- hlavny goal-->
            <div class='progress-wrapper'>
                <!--<div class='progress-bar'>
                    progress bar 
                    <div class='progress'>

                    </div>
                    <div class='progress-end'>
                        <img src='img/wheelbarrow.png'>
                    </div>
                </div>-->
            </div>
        </section>
        <section id='form-section'>
            <form method="POST" action='/sql' class="spend-input goal-form">
                <div class="goal-input"> 
                    <input type='text' name='name' placeholder="Name of goal"/>
                </div>
                <div class="goal-input">
